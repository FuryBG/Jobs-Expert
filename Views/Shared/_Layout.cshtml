<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <a href="/"><img src="/images/Logo_expert.png"></a>
            <div class="main-nav">
            </div>
            <div class="auth">
                <a href="/home/login">Login</a>
                <a href="/home/register">Register</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-content">
            <div class="footer-image">
                <img src="/images/Logo_expert.png">
                <p>Find experts easy...</p>
            </div>
            <div class="footer-for-us">
                <a>Contacts</a>
                <a>Privacy</a>
                <a>Terms</a>
            </div>
            <div class="footer-social">
                <a>Facebook</a>
                <a>Instagram</a>
                <a>Twitter</a>
            </div>
        </div>
        <div class="copyright">
            <div>© 2022 RS ™ All Rights Reserved</div>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
